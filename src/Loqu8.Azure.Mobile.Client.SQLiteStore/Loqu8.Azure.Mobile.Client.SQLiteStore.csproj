<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <RootNamespace>Loqu8.Azure.Mobile.Client.SQLiteStore</RootNamespace>
    <Version>4.0.0</Version>
