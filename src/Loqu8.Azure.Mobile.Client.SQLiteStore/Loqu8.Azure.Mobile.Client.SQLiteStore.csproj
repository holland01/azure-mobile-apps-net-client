    <Compile Include="..\Microsoft.Azure.Mobile.Client.SQLiteStore\SQLitePCLRawHelpers.cs" Link="SQLitePCLRawHelpers.cs" />
    <Compile Include="..\Microsoft.Azure.Mobile.Client.SQLiteStore\SqlQueryFormatter.cs" Link="SqlQueryFormatter.cs" />
    <Compile Include="..\Microsoft.Azure.Mobile.Client.SQLiteStore\TableDefinition.cs" Link="TableDefinition.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Extensions\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Loqu8.SQLitePCLRaw.bundle_xsqlite3" Version="1.1.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.Azure.Mobile.Client\Microsoft.Azure.Mobile.Client.csproj" />
